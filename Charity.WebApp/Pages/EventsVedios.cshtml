@page
@model Charity.WebApp.Pages.EventsVediosModel
@{
}
@using Charity.WebApp.Resources;
@inject LocService SharedLocalizer;
<!-- Page Banner Section -->
<section class="page-banner">
    <div class="image-layer lazy-image" data-bg="url('images/background/bg-banner-1.jpg')"></div>
    <div class="bottom-rotten-curve"></div>

    <div class="auto-container">
        <h1>Our Events</h1>
        <ul class="bread-crumb clearfix">
            <li><a asp-page="Index">@SharedLocalizer.GetLocalizedHtmlString("Home")</a></li>
            <li class="active">@SharedLocalizer.GetLocalizedHtmlString("Events")</li>
        </ul>
    </div>

</section>
<!--End Banner Section -->
<!--Events Section-->
<section class="events-section">
    <div class="auto-container">

        <div class="row clearfix">

            @foreach (var item in Model.vedioResult)
            {
                <!--Event Block-->
                <div class="event-block-three col-lg-4 col-md-6 col-sm-12">

                    <div class="inner-box wow fadeInUp" data-wow-delay="0ms">
                        <div class="image-box">
                            <figure class="image">
                                <a>
                                    <iframe height="250" width="400" src="@item.URL" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                                </a>
                            </figure>
                            <div class="date"><span class="month">@item.Type</span></div>
                        </div>
                        <div class="lower-content">
                            <ul class="info clearfix">
                                <li><span class="icon far fa-clock"></span> @item.CreatedAt</li>
                            </ul>
                        </div>
                    </div>
                </div>
            }

            @if (Model.vedioResult.Count == 0)
            {
                <div class="event-block-three col-lg-12 col-md-6 col-sm-12">
                    <p>@SharedLocalizer.GetLocalizedHtmlString("NoData")</p>
                </div>
            }

        </div>

    </div>
</section>