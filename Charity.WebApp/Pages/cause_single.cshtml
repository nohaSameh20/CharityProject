@page
@model Charity.WebApp.Pages.cause_singleModel
@{
}
@{
    Layout = "~/Pages/Shared/AdminLayout.cshtml";
}
@using Charity.WebApp.Resources;
@inject LocService SharedLocalizer;
<!-- Page Banner Section -->
<section class="page-banner">
    <div class="image-layer lazy-image" data-bg="url('images/background/bg-banner-1.jpg')"></div>
    <div class="bottom-rotten-curve"></div>

    <div class="auto-container">
        <h1>@SharedLocalizer.GetLocalizedHtmlString("Case_Details")</h1>
        <ul class="bread-crumb clearfix">
            <li><a asp-page="/Index">@SharedLocalizer.GetLocalizedHtmlString("Home")</a></li>
            <li class="active">@SharedLocalizer.GetLocalizedHtmlString("Case_Details")</li>
        </ul>
    </div>

</section>
<!--End Banner Section -->
<!--Sidebar Page Container-->
<div class="sidebar-page-container">
    <div class="auto-container">
        <div class="row clearfix">

            <!--Content Side / Blog Sidebar-->
            <div class="content-side col-lg-4 col-md-12 col-sm-12">
                <!--Cause Details-->
                <div class="cause-details">
                    <div class="inner-box">
                        <div class="lower-content">
                            <div class="text-content">
                                <h3 style="color:#3aa364;font-weight:bold">@SharedLocalizer.GetLocalizedHtmlString("Case_Information"):</h3>
                                <ul>
                                    <li><span style="color:#3aa364;font-weight:bold">@SharedLocalizer.GetLocalizedHtmlString("Name"): </span>@Model.Result.CaseName</li>
                                    <li><span style="color:#3aa364;font-weight:bold">@SharedLocalizer.GetLocalizedHtmlString("Description"): </span>@Model.Result.CaseDescription</li>
                                    <li><span style="color:#3aa364;font-weight:bold">@SharedLocalizer.GetLocalizedHtmlString("Phone_Number"): </span>@Model.Result.CasePhoneNumber</li>
                                    <li><span style="color:#3aa364;font-weight:bold">@SharedLocalizer.GetLocalizedHtmlString("Address"): </span>@Model.Result.FisrtAddress</li>
                                    <li><span style="color:#3aa364;font-weight:bold">Second Address: </span>@Model.Result.SecondAddress</li>
                                    <li><span style="color:#3aa364;font-weight:bold">@SharedLocalizer.GetLocalizedHtmlString("Gender"): </span>@Model.Result.CaseGender</li>
                                    <li><span style="color:#3aa364;font-weight:bold">@SharedLocalizer.GetLocalizedHtmlString("Age"): </span>@Model.Result.CaseAge</li>
                                    <li><span style="color:#3aa364;font-weight:bold">@SharedLocalizer.GetLocalizedHtmlString("Religion"): </span>@Model.Result.Religion</li>
                                    <li><span style="color:#3aa364;font-weight:bold">@SharedLocalizer.GetLocalizedHtmlString("Region"): </span>@Model.Result.Region</li>
                                    <li><button class="btn"> <a asp-page-handler="DownloadFile" asp-route-Id="@Model.Result.Id">@SharedLocalizer.GetLocalizedHtmlString("Download_Case_Attachments")</a></button></li>
                                </ul>

                            </div>
                            <div class="link-box"><a asp-page="/Donate" class="theme-btn btn-style-one"><span class="btn-title">@SharedLocalizer.GetLocalizedHtmlString("DonateNow")</span></a></div>
                        </div>
                    </div>

                </div>

            </div>
            <div class="content-side col-lg-4 col-md-12 col-sm-12">
                <!--Cause Details-->
                <div class="cause-details">
                    <div class="inner-box">
                        <div class="lower-content">
                            <div class="text-content">
                                <h3 style="color:#3aa364;font-weight:bold">@SharedLocalizer.GetLocalizedHtmlString("Sender_Information"):</h3>
                                <ul>
                                    <li><span style="color:#3aa364;font-weight:bold">@SharedLocalizer.GetLocalizedHtmlString("Sender_Name"): </span>@Model.Result.SenderName</li>
                                    <li><span style="color:#3aa364;font-weight:bold">@SharedLocalizer.GetLocalizedHtmlString("Sender_Phone"): </span>@Model.Result.SenderPhoneNumber</li>
                                    <li><span style="color:#3aa364;font-weight:bold">@SharedLocalizer.GetLocalizedHtmlString("Sender_Address"): </span>@Model.Result.SenderAddress</li>

                                </ul>
                            </div>
                        </div>
                    </div>

                </div>

            </div>

            <div class="content-side col-lg-4 col-md-12 col-sm-12">
                <img src="~/images/Details.jpg" />
            </div>

        </div>
    </div>
</div>