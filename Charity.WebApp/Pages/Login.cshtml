@page
@model Charity.WebApp.Pages.LoginModel
@{
}

<style>
    .form-group span {
        color: red;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center" style="color: #199849; font-size: 27px; font-weight: bold">Sign In</h5>
                    <div class="d-flex flex-column text-center">
                        <form method="post">
                            <div class="form-group">
                                <input type="email" asp-for="model.Email" class="form-control" id="email" placeholder="Your email address...">
                                <span asp-validation-for="model.Email"></span>

                            </div>
                            <div class="form-group">
                                <input type="password" asp-for="model.Password" class="form-control" id="password" placeholder="Your password...">
                                <span asp-validation-for="model.Password"></span>

                            </div>
                            <button type="submit" class="btn btn-success  btn-block btn-round  btn-style-three" style="color:white">Login</button>
                        </form>
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <div class="signup-section">Create an account? <a class="text-info" asp-page="/Register">Sign Up</a></div>
                </div>
            </div>
        </div>
    </div>
</div>



