@page
@model Charity.WebApp.Pages.LoginModel
@{
}
@using Charity.WebApp.Resources;
@inject LocService SharedLocalizer;
<style>
    .form-group span {
        color: red;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center" style="color: #199849; font-size: 27px; font-weight: bold">@SharedLocalizer.GetLocalizedHtmlString("Login")</h5>
                    <div class="d-flex flex-column text-center">
                        <form method="post">
                            <div class="form-group">
                                <input type="email" asp-for="model.Email" class="form-control" id="email" placeholder="@SharedLocalizer.GetLocalizedHtmlString("Your_Email")">
                                <span asp-validation-for="model.Email"></span>

                            </div>
                            <div class="form-group">
                                <input type="password" asp-for="model.Password" class="form-control" id="password" placeholder="@SharedLocalizer.GetLocalizedHtmlString("Your_password")">
                                <span asp-validation-for="model.Password"></span>

                            </div>
                            <button type="submit" class="btn btn-success  btn-block btn-round  btn-style-three" style="color:white">@SharedLocalizer.GetLocalizedHtmlString("Login")</button>
                        </form>
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                    <div class="signup-section">@SharedLocalizer.GetLocalizedHtmlString("Create_an_account") <a class="text-info" asp-page="/Register">@SharedLocalizer.GetLocalizedHtmlString("Sign_Up")</a></div>
                </div>
            </div>
        </div>
    </div>
</div>



