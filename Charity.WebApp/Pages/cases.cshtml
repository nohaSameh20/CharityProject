@page
@model Charity.WebApp.Pages.causesModel
@{
}
@{int i = 1;}

<!-- Page Banner Section -->
<section class="page-banner">
    <div class="image-layer lazy-image" data-bg="url('images/background/bg-banner-1.jpg')"></div>
    <div class="bottom-rotten-curve"></div>

    <div class="auto-container">
        <h1>Our Cases</h1>
        <ul class="bread-crumb clearfix">
            <li><a asp-page="/Index">Home</a></li>
            <li class="active">Our Cases</li>
        </ul>
    </div>

</section>
<!--End Banner Section -->
<!--Causes Section-->
<section class="causes-section">
    <div class="auto-container">

        <div class="row clearfix">

            @foreach (var item in Model.Result)
            {
                <!--Cause Block-->
                <div class="cause-block col-lg-4 col-md-6 col-sm-12">
                    <div class="inner-box wow fadeInUp" data-wow-delay="0ms">
                        <div class="donate-info" style="height:20px">
                            @*<div><a download="@item.CaseAttachment"><img src="data:image/png;base64,@item.CaseAttachment"></a></div>*@
                            <a style="position: absolute; top: 16px; left: 119px;"><p style="font-size: 40px; color: #1a9648; font-weight: bold;">Case:@(i++)</p></a>
                        </div>
                        <div class="lower-content">

                            <h3><a><span style="color:#3aa364;font-weight:bold"> Name:</span>@item.CaseName</a></h3>
                            <div class="text"><span style="color:#3aa364;font-weight:bold">Phone Number:</span>@item.CasePhoneNumber</div>
                            <div class="text"><span style="color:#3aa364;font-weight:bold"> Address:</span>@item.FisrtAddress</div>
                            @*<div class="text"><span style="color:#3aa364;font-weight:bold"> Gender:</span>@item.CaseGender</div>*@
                            @*<div class="text"><span style="color:#3aa364;font-weight:bold"> Age:</span>@item.CaseAge</div>*@
                            @*<div class="text"><span style="color:#3aa364;font-weight:bold"> Religion:</span>@item.Religion</div>*@


                            <div class="link-box"><a asp-page="/cause_single" asp-route-Id="@item.Id" asp-page-handler="ViewCaseDetails" class="theme-btn btn-style-two"><span class="btn-title">Read More</span></a></div>
                        </div>
                    </div>
                </div>
            }
            @if (Model.Result.Count==0)
            { 
             <div class="cause-block col-lg-12 col-md-6 col-sm-12">
                 <p style="text-align:center">No Data To Be Shown......</p>
            </div>
            }
        </div>

    </div>
</section>
